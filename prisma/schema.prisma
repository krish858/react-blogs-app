generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  password String
  blogs    blog[]
}

model blog {
  id        Int     @id @default(autoincrement())
  authorid  Int
  content   String
  title     String
  published Boolean @default(false)
  author    User    @relation(fields: [authorid], references: [id])
}
